---
import { getCollection } from 'astro:content';

// Redirect to the paid ads masterclass (or first course)
const courses = await getCollection('courses');
const firstCourse = courses.find(c => c.data.slug === 'paid-ads-masterclass') || courses[0];

if (firstCourse) {
  return Astro.redirect(`/courses/${firstCourse.data.slug}`);
}
